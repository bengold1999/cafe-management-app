// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
     url      = "file:./dev.db"
}

model Employee {
  id       Int      @id @default(autoincrement())
  name     String
  age      Int
  email    String   @unique
  password String
  shifts   Shift[]
}

model Shift {
  id         Int       @id @default(autoincrement())
  employeeId Int
  employee   Employee  @relation(fields: [employeeId], references: [id])
  startTime  DateTime
  endTime    DateTime?
}